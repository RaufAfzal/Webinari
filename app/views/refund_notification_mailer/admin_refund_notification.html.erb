            <h5>Booking for: <%= link_to @workshop.name, workshop_url(@workshop), target: '_blank'%> </h5>
            <h5>Booking Date: <%=@booking.created_at.strftime("%d-%m-%y %H:%M %p")%></h5>
        </div>      
    </div>
